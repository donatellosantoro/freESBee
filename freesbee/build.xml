                    <!--<include name="**/qualificazione/erogatore/Test*Errat*.class" />-->
                    <!--<include name="**/qualificazione/erogatore/Test*Errate.class" />-->
                    <!--<include name="**/qualificazione/erogatore/Test*Errate001.class" />-->
